<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp"
    tools:context=".View.PrincipalView">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/roundeds"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/number"
                android:textColor="#000"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zannier Vargas"/>

            <TextView
                android:id="@+id/name"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="980537795"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <Button
            android:id="@+id/delete"
            android:onClick="deleteContact"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/delete"
            android:backgroundTint="#ff0019"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/call"
            android:backgroundTint="#1a237e"
            android:onClick="callContact"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/edit"
            android:backgroundTint="#00d0ff"
            android:onClick="editContact"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>





</android.support.v7.widget.CardView>